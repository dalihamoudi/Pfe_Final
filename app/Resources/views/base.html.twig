<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <title>
        {% block title %}
            Phila_Promotion
        {% endblock %}
    </title>
    <meta name="description" content="" />
    <meta name="Author" content="Khemiri Abderrazek" />

    <!-- mobile settings -->
    <meta name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0" />





    {% block stylesheets %}
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700,800&amp;subset=latin,latin-ext,cyrillic,cyrillic-ext" rel="stylesheet" type="text/css" />

        <!-- CORE CSS -->
        <link href="{{ asset('plugins/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />

        <!-- THEME CSS -->
        <link href="{{ asset('css/essentials.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('css/layout.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('css/color_scheme/green.css') }}" rel="stylesheet" type="text/css" id="color_scheme" />
    {% endblock %}

</head>
<body>

<!-- WRAPPER -->
<div id="wrapper" class="clearfix">

    <!--
        ASIDE
        Keep it outside of #wrapper (responsive purpose)
    -->
    <aside id="aside">
        <!--
            Always open:
            <li class="active alays-open">

            LABELS:
                <span class="label label-danger pull-right">1</span>
                <span class="label label-default pull-right">1</span>
                <span class="label label-warning pull-right">1</span>
                <span class="label label-success pull-right">1</span>
                <span class="label label-info pull-right">1</span>
        -->
        <nav id="sideNav"><!-- MAIN MENU -->
            <ul class="nav nav-list">
                <li class="active"><!-- dashboard -->
                    <a class="dashboard" href="{{ path('cmd_ind')}}"><!-- warning - url used by default by ajax (if eneabled) -->
                        <i class="main-icon fa fa-dashboard"></i> <span>Menu</span>
                    </a>
                </li>
                {% if is_granted('ROLE_MANAGER') or is_granted('ROLE_DELEGUE')  %}
                <li>
                    <a href="#">
                        <i class="fa fa-menu-arrow pull-right"></i>
                        <i class="main-icon fa fa-table"></i> <span>Commande Pharmacie</span>
                    </a>
                    <ul><!-- submenus -->
                        <li><a href="{{ path('cmd')}}">Afficher</a></li>
                        <li><a href="{{ path('cmd_newD')}}">Ajouter</a></li>

                    </ul>
                </li>
                 {% endif %}
                <li>
                    <a href="#">
                        <i class="fa fa-menu-arrow pull-right"></i>
                        <i class="main-icon fa fa-bar-chart-o"></i> <span>Depence Budget</span>
                    </a>
                    <ul><!-- submenus -->
                        <li><a href="{{ path('depencebudget')}}">Afficher</a></li>
                        <li><a href="{{ path('depencebudget') }}">Ajouter</a></li>

                    </ul>
                </li>
            </ul>

            <!-- SECOND MAIN LIST -->
            <h3>MORE</h3>
            <ul class="nav nav-list">
                {% if is_granted('ROLE_MANAGER') or is_granted('ROLE_SECRETAIRE')  %}
                <li>
                    <a href="#">
                        <i class="fa fa-menu-arrow pull-right"></i>
                        <i class="fa fa-ambulance"></i> <span>clients</span>
                    </a>
                    <ul><!-- submenus -->
                        <li><a href="{{ path('client')}}">Afficher</a></li>
                        <li><a href="{{ path('client')}}">Ajouter</a></li>

                    </ul>
                </li>
                {% endif %}
                
                {% if is_granted('ROLE_MANAGER') or is_granted('ROLE_SECRETAIRE')  %} 
                <li>
                    <a href="#">
                        <i class="fa fa-menu-arrow pull-right"></i>
                        <i class="et-basket"></i> <span>Produits</span>
                    </a>
                    <ul><!-- submenus -->
                        <li><a href="{{ path('produit')}}">Afficher</a></li>
                        <li><a href="{{ path('produit')}}">Ajouter</a></li>


                    </ul>
                </li>
                {% endif %}
                 {% if is_granted('ROLE_MANAGER') %}                                
                <li>
                    <a href="#">
                        <i class="fa fa-menu-arrow pull-right"></i>
                        <i class="main-icon fa fa-gears"></i> <span>Gestion Utilisateur</span>
                    </a>
                    <ul><!-- submenus -->
                        <li>
                            <a href="#">
                                <i class="fa fa-menu-arrow pull-right"></i>
                                Delegue
                            </a>
                            <ul>
                                <li><a href="{{ path('delegue') }}">Afficher</a></li>
                                <li><a href="{{ path('delegue_new') }}">Ajouter</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul><!-- submenus -->
                        <li>
                            <a href="#">
                                <i class="fa fa-menu-arrow pull-right"></i>
                                Secretaire
                            </a>
                            <ul>
                                <li><a href="{{ path('secretaire') }}">Afficher</a></li>
                                <li><a href="{{ path('secretaire_new') }}">Ajouter</a></li>
                            </ul>
                        </li>
                    </ul>
                </li>
                {% endif %}
            </ul>

        </nav>

        <span id="asidebg"><!-- aside fixed background --></span>
    </aside>
    <!-- /ASIDE -->


    <!-- HEADER -->
    <header id="header">

        <!-- Mobile Button -->
        <button id="mobileMenuBtn"></button>

        <!-- Logo -->
        <span class="logo pull-left">
					<img src="{{ asset('images/logo_light.png') }}" alt="admin panel" height="35" />
				</span>

        <form method="get" action="page-search.html" class="search pull-left hidden-xs">
            <input type="text" class="form-control" name="k" placeholder="Search for something..." />
        </form>

        <nav>

            <!-- OPTIONS LIST -->
            <ul class="nav pull-right">

                <!-- USER OPTIONS -->
                <li class="dropdown pull-left">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                        <img class="user-avatar" alt="" src="{{ asset('images/noavatar.jpg') }}" height="34" />
                        <span class="user-name">
									<span class="hidden-xs">
										{% if app.user %}
                                                                                   {{ app.user.username }}
                                                                                    {% endif  %}  
                                                                                 <i class="fa fa-angle-down"></i>
									</span>
								</span>
                    </a>
                    <ul class="dropdown-menu hold-on-click">                                               
                        <li><!-- logout -->
                            <a href="{{path('fos_user_security_logout')}}"><i class="fa fa-power-off"></i> Log Out</a>
                        </li>
                    </ul>
                </li>
                <!-- /USER OPTIONS -->

            </ul>
            <!-- /OPTIONS LIST -->

        </nav>

    </header>
    <!-- /HEADER -->


    <!--
        MIDDLE
    -->
    <section id="middle">
        <div id="content" class="dashboard padding-20">

            {% block body %}

            {% endblock %}

        </div>
    </section>
    <!-- /MIDDLE -->

</div>


{% block javascripts %}


    <script type="text/javascript">var plugin_path = '{{ asset('plugins/') }}';</script>

    <script type="text/javascript" src="{{ asset('plugins/jquery/jquery-2.1.4.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/app.js') }}"></script>


{% endblock %}
</body>
</html>
