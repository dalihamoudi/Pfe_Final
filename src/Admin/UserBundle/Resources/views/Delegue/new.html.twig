{% extends '::base.html.twig' %}

{% block body -%}
    <button type="button" style="color: #0d6aad" class="glyphicon glyphicon-pencil" data-toggle="modal" data-target=".bs-example-modal-lg1">Ajouter Delegue</button>

    <div class="modal fade bs-example-modal-lg1" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg1">
            <div class="modal-content">

                <!-- header modal -->
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>

                <!-- body modal -->
                <div class="modal-body">
                    <center><h1>Create Delegue</h1></center>
                    {{ form_start(create_form) }}
                    <p>
                    <div>
                        <label>Login</label>
                        {{ form_widget(create_form.username, {'attr': {'class': 'form-control pointer required'}})}}
                    </div>
                    <div>
                        <label>Email</label>
                        {{ form_widget(create_form.email, {'attr': {'class': 'form-control pointer required'}})}}
                    </div>
                    <div>
                        <label>PWD</label>
                        {{ form_widget(create_form.plainPassword.first, {'attr': {'class': 'form-control pointer required'}})}}
                    </div>
                    <div>
                        <label>Confirm PWD</label>
                        {{ form_widget(create_form.plainPassword.second, {'attr': {'class': 'form-control pointer required'}})}}
                    </div>
                    <div>
                        <label>NOM</label>
                        {{ form_widget(create_form.pFNom, {'attr': {'class': 'form-control pointer required'}})}}
                    </div>
                    <div>
                        <label>PRENOM</label>
                        {{ form_widget(create_form.pFPrenom, {'attr': {'class': 'form-control pointer required'}}) }}
                    </div>
                    <div>
                        <label>DATE EMB</label>
                        {{ form_widget(create_form.pFDateEmb,{'attr': {'class': 'form-control required'}}) }}
                    </div>
                    <div>
                        <label>DATE SORTIE</label>
                        {{ form_widget(create_form.pFDateSortie,{'attr': {'class': 'form-control required'}}) }}
                    </div>
                    <div>
                        <label>TEL</label>
                        {{ form_widget(create_form.pFTel, {'attr': {'class': 'form-control pointer required'}}) }}
                    </div>
                    <div>
                        <label>ORANT OPTION</label>
                        {{ form_widget(create_form.pFOrantOption, {'attr': {'class': 'form-control pointer required'}}) }}
                    </div>
                    <div>
                        <label>Diplome</label>
                        {{ form_widget(create_form.diplome, {'attr': {'class': 'form-control pointer required'}}) }}
                    </div>
                    <div>
                        <label>P f commentaire</label>
                        {{ form_widget(create_form.pFCommentaire, {'attr': {'class': 'form-control pointer required'}}) }}
                    </div>
                    <div>
                        <label>ETAT</label>
                        {{ form_widget(create_form.pFEtat, {'attr': {'class': 'form-control pointer required'}}) }}
                    </div>
                    <div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </div>
                    {{ form_end(create_form) }}
                </div></div></div></div>
{% endblock %}
