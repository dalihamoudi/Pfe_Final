{% block body -%}
<button type="button" style="color: #0d6aad" class="glyphicon glyphicon-pencil" data-toggle="modal" data-target=".bs-example-modal-lg{{ entity.id }}"></button>

<div class="modal fade bs-example-modal-lg{{ entity.id }}" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg{{ entity.id }}">
        <div class="modal-content">

            <!-- header modal -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>

            <!-- body modal -->
            <div class="modal-body">
                <center><h1>Edit DELEGUE</h1></center>
                {{ form_start(edit_form) }}
                <p>
                <div>
                    <label>NOM</label>
                    {{ form_widget(edit_form.pFNom, {'attr': {'class': 'form-control pointer required'}})}}
                </div>
                <div>
                    <label>PRENOM</label>
                    {{ form_widget(edit_form.pFPrenom, {'attr': {'class': 'form-control pointer required'}}) }}
                </div>
                <div>
                    <label>DATE EMB</label>
                    {{ form_widget(edit_form.pFDateEmb) }}
                </div>
                <div>
                    <label>DATE SORTIE</label>
                    {{ form_widget(edit_form.pFDateSortie) }}
                </div>
                <div>
                    <label>TEL</label>
                    {{ form_widget(edit_form.pFTel, {'attr': {'class': 'form-control pointer required'}}) }}
                </div>
                <div>
                    <label>EMAIL</label>
                    {{ form_widget(edit_form.pFEmail, {'attr': {'class': 'form-control pointer required'}}) }}
                </div>
                <div>
                    <label>LOGIN</label>
                    {{ form_widget(edit_form.pFLogin, {'attr': {'class': 'form-control pointer required'}}) }}
                </div>
                <div>
                    <label>PASSWORD</label>
                    {{ form_widget(edit_form.pFHashPWD, {'attr': {'class': 'form-control pointer required'}}) }}
                </div>
                <div>
                    <label>ORANT OPTION</label>
                    {{ form_widget(edit_form.pFOrantOption, {'attr': {'class': 'form-control pointer required'}}) }}
                </div>
                <div>
                    <label>ETAT</label>
                    {{ form_widget(edit_form.pFEtat, {'attr': {'class': 'form-control pointer required'}}) }}
                </div>





            </div></div></div></div>
{% endblock %}
