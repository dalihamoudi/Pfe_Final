            <tr>
                <td><a href="{{ path('detailcmd_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.quantite }}</td>
                <td>{{ entity.gadgetQuantite }}</td>
                <td>{{ entity.pGHTActuel }}</td>
                <td>{{ entity.commentaire }}</td>
                <td>{{ entity.matMemoPGHTActuel }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('detailcmd_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('detailcmd_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('detailcmd_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
