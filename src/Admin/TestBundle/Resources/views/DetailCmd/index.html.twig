{% extends '::base.html.twig' %}

{% block body -%}
    <h1>DetailCmd list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantite</th>
                <th>Gadgetquantite</th>
                <th>Pghtactuel</th>
                <th>Commentaire</th>
                <th>Matmemopghtactuel</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
